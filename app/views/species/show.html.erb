<h1><%= @species.name %></h1>

<h2>Existing sightings:</h2>

<table class="table table-striped table-hover">
  <thead>
    <tr class="active">
      <th>Latitude</th><th>Longitude</th><th>Date</th><th>Region</th>
    </tr>
  </thead>
  <tbody>
  <% @species.sightings.each do |time| %>
  <% if time.region_id == 1 %>
    <% @region = "Northwest" %>
  <% elsif time.region_id == 2 %>
    <% @region = "Southwest" %>
  <% elsif time.region_id == 3 %>
    <% @region = "Southeast" %>
  <% elsif time.region_id == 4 %>
    <% @region = "Northeast" %>
  <% end %>
    <tr class="primary"><td><a href="/species/<%= @species.id %>/sightings/<%= time.id %>"><%= time.latitude %></td>    <td><%= time.longitude %></td>  <td>  <%= time.date %></td>    <td><%= @region %></td>
    </tr>
  <% end %>
</tbody>
</table>

<div class="btn-toolbar">
<div class="btn-group">

<a href="/species/<%= @species.id %>/sightings/new" class="btn btn-default">Enter new sighting</a>



<a href="/species/<%= @species.id %>/edit" class="btn btn-default">Edit Species Name</a>
<a href="/species/<%= @species.id %>"
      data-confirm="You sure?"
      data-method="delete"
      rel="nofollow" class="btn btn-default">Delete Species</a>

</div>
</div>


</div>
